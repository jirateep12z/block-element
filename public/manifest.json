{
  "manifest_version": 3,
  "name": "Block Element",
  "description": "Hide any element on any website by clicking it. Per-site rules powered by CSS injection.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/block-element.png",
    "32": "icons/block-element.png",
    "48": "icons/block-element.png",
    "128": "icons/block-element.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/block-element.png",
      "32": "icons/block-element.png",
      "48": "icons/block-element.png",
      "128": "icons/block-element.png"
    },
    "default_title": "Block Element"
  },
  "permissions": ["storage", "activeTab", "scripting", "contextMenus", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
